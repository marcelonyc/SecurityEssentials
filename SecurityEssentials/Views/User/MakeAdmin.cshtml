@model SecurityEssentials.Model.User
@{
    ViewBag.Title = "Make Administrator";
    ViewBag.Active = "Admin";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink(string.Format("Edit User {0}", Model.UserName), "Edit", "User", new { id = Model.Id }, null)</li>
        <li class="breadcrumb-item active">Add Administrator Permission</li>
    </ol>
</nav>

<h1>Make a user a system Administrator</h1>
<hr />
@using (Html.BeginForm("MakeAdmin", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-md-4"><span class="labelBold">User Name</span></div>
        <div class="col-md-4"><span id="UserName">@Html.DisplayFor(model => model.UserName)</span></div>
    </div>
    <div class="row">
        <div class="col-md-4">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-12">Are you sure you want to make this user a system administrator? They will have access to all system and user management functions.</div>
    </div>
    <div class="row">
        <div class="col-md-4">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-2 offset-md-8"><input id="submit" type="submit" value="Confirm" class="btn btn-block btn-primary" /></div>
    </div>
    @Html.AntiForgeryToken()
}

@section scripts {
}
