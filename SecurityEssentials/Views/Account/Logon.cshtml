@model SecurityEssentials.ViewModel.LogOnViewModel

@{
    ViewBag.Title = "Logon";
    ViewBag.Active = "Home";
}

@using (Html.BeginForm("LogonAsync", "Account", new { returnUrl = ViewBag.ReturnUrl, isBackOffice = ViewBag.IsBackOffice }))
{
    @Html.AntiForgeryToken()

    <h1>Logon</h1>
    <hr />
    if (ViewBag.Unauthorised == true)
    {
        <text><div class="alert alert-danger">You are not logged in, please log in to access the requested content</div></text>
    }

    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-md-4">@Html.LabelFor(m => m.UserName)</div>
        <div class="col-md-4">@Html.TextBoxFor(m => m.UserName, new { placeholder = "Email Address", @class = "form-control", autocomplete = "OFF" })</div>
        <div class="col-md-4">@Html.ValidationMessageFor(m => m.UserName)&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-4">@Html.LabelFor(m => m.Password)</div>
        <div class="col-md-4">@Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control", autocomplete = "OFF" })</div>
        <div class="col-md-4">@Html.ValidationMessageFor(m => m.Password)&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-6">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-6">&nbsp;</div>
        <div class="col-md-2"><input type="submit" value="Log in" class="btn btn-primary btn-block" id="Login" /></div>
        <div class="col-md-2"><a href="Recover" id="Recover" class="btn btn-link pull-right">Forgotten Password?</a></div>
    </div>

}

@section Scripts {

}
